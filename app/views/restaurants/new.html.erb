<h1>New Restaurant</h1>
<% if @restaurant.errors.any? %>
  <div style="color:b00;">
    <h3><%= pluralize(@restaurant.errors.count, "error") %> prevented saving:</h3>
    <ul>
      <% @restaurant.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @restaurant do |f| %>
  <p><%= f.label :name %><br>
    <%= f.text_field :name %></p>
  <p><%= f.label :address %><br>
    <%= f.text_field :address %></p>
  <p><%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %></p>
  <p><%= f.label :category %><br>
    <%= f.text_field :category %></p>
  <p><%= f.submit "Create" %></p>
<% end %>
<p><%= link_to "Back", restaurants_path %></p>