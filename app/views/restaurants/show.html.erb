<h1><%= @restaurant.name %></h1>
<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>
<hr>
<h2>Reviews</h2>
<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |rev| %>
      <li><%= rev.rating %>/5 - <%= rev.content %></li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>
<hr>
<h3>Add a review</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :rating, collection: 0..5, prompt: "Select rating" %>
    <%= f.input :content %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Post review" %>
  </div>
<% end %>
<p><%= link_to "Back to all restaurants", restaurants_path %></p>